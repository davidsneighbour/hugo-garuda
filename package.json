{
  "name": "@davidsneighbour/hugo-garuda",
  "description": "An opiniated colorful theme for Hugo by David's Neighbour",
  "version": "1.4.94",
  "author": {
    "name": "Patrick Kollitsch",
    "email": "patrick@davids-neighbour.com",
    "web": "https://davids-neighbour.com"
  },
  "browserslist": [
    "extends browserslist-config-dnb"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "body-max-line-length": [
        0,
        "always",
        100
      ],
      "type-enum": [
        0,
        "always",
        [
          "feat",
          "fix",
          "layouts",
          "refactor",
          "test",
          "chore",
          "wip",
          "content"
        ]
      ]
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    }
  },
  "contributors": [
    {
      "name": "Patrick Kollitsch",
      "email": "patrick@davids-neighbour.com",
      "web": "https://davids-neighbour.com"
    }
  ],
  "devDependencies": {
    "@commitlint/cli": "19.7.1",
    "@commitlint/config-conventional": "19.7.1",
    "@davidsneighbour/browserslist-config": "2025.0.2",
    "@davidsneighbour/commitlint-config": "2025.0.2",
    "@davidsneighbour/eslint-config": "2025.0.2",
    "@davidsneighbour/remark-config": "2025.0.2",
    "@davidsneighbour/release-config": "2025.0.2",
    "@davidsneighbour/stylelint-config": "2025.0.2",
    "@fullhuman/postcss-purgecss": "7.0.2",
    "autoprefixer": "10.4.21",
    "commitizen": "4.3.1",
    "cross-env": "7.0.3",
    "cssnano": "7.0.6",
    "cz-conventional-changelog": "3.3.0",
    "cz-customizable": "7.4.0",
    "cz-customizable-ghooks": "2.0.0",
    "pixrem": "5.0.0",
    "postcss": "8.5.3",
    "postcss-cli": "11.0.0",
    "precss": "4.0.0",
    "standard-version": "9.5.0",
    "workbox-cacheable-response": "7.3.0",
    "workbox-expiration": "7.3.0"
  },
  "license": "MIT",
  "private": true,
  "repository": "davidsneighbour/garuda",
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack --progress",
    "release": "standard-version --release-as patch -a -t \"v\" && ./bin/release-hook-postrelease.sh",
    "release-major": "standard-version --release-as major -a -t \"v\" && ./bin/release-hook-postrelease.sh",
    "release-next": "standard-version --release-as minor -a -t \"v\" && ./bin/release-hook-postrelease.sh",
    "stylelint": "stylelint assets/scss/",
    "stylelint-fix": "stylelint assets/scss/ --fix",
    "stylelint2": "stylelint"
  },
  "standard-version": {
    "skip": {
      "changelog": true
    },
    "scripts": {
      "prerelease": "./bin/release-hook-prerelease.sh"
    },
    "bumpFiles": [
      {
        "filename": ".version",
        "type": "plain-text"
      },
      {
        "filename": "package.json",
        "type": "json"
      }
    ]
  }
}