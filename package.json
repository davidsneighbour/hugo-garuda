{
  "name": "@davidsneighbour/hugo-garuda",
  "description": "An opiniated colorful theme for Hugo by David's Neighbour",
  "version": "1.4.94",
  "author": {
    "name": "Patrick Kollitsch",
    "email": "patrick@davids-neighbour.com",
    "web": "https://davids-neighbour.com"
  },
  "browserslist": [
    "extends browserslist-config-dnb"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "body-max-line-length": [
        0,
        "always",
        100
      ],
      "type-enum": [
        0,
        "always",
        [
          "feat",
          "fix",
          "layouts",
          "refactor",
          "test",
          "chore",
          "wip",
          "content"
        ]
      ]
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    }
  },
  "contributors": [
    {
      "name": "Patrick Kollitsch",
      "email": "patrick@davids-neighbour.com",
      "web": "https://davids-neighbour.com"
    }
  ],
  "devDependencies": {
    "@commitlint/cli": "13.1.0",
    "@commitlint/config-conventional": "13.1.0",
    "@davidsneighbour/browserslist-config": "github:davidsneighbour/browserslist-config",
    "@davidsneighbour/commitlint-config": "github:davidsneighbour/commitlint-config",
    "@davidsneighbour/eslint-config": "github:davidsneighbour/eslint-config",
    "@davidsneighbour/remark-preset-lint": "github:davidsneighbour/remark-preset-lint",
    "@davidsneighbour/standard-version-config": "github:davidsneighbour/standard-version-config",
    "@davidsneighbour/stylelint-config": "github:davidsneighbour/stylelint-config",
    "@davidsneighbour/textlint-config": "github:davidsneighbour/textlint-config",
    "@fullhuman/postcss-purgecss": "4.0.3",
    "autoprefixer": "10.3.1",
    "commitizen": "4.2.4",
    "cross-env": "7.0.3",
    "cssnano": "5.0.7",
    "cz-conventional-changelog": "3.3.0",
    "cz-customizable": "6.3.0",
    "cz-customizable-ghooks": "2.0.0",
    "pixrem": "5.0.0",
    "postcss": "8.4.31",
    "postcss-cli": "8.3.1",
    "precss": "4.0.0",
    "standard-version": "9.3.1",
    "workbox-cacheable-response": "^6.1.5",
    "workbox-expiration": "^6.1.5"
  },
  "license": "MIT",
  "private": true,
  "repository": "davidsneighbour/garuda",
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack --progress",
    "release": "standard-version --release-as patch -a -t \"v\" && ./bin/release-hook-postrelease.sh",
    "release-major": "standard-version --release-as major -a -t \"v\" && ./bin/release-hook-postrelease.sh",
    "release-next": "standard-version --release-as minor -a -t \"v\" && ./bin/release-hook-postrelease.sh",
    "stylelint": "stylelint assets/scss/",
    "stylelint-fix": "stylelint assets/scss/ --fix",
    "stylelint2": "stylelint"
  },
  "standard-version": {
    "skip": {
      "changelog": true
    },
    "scripts": {
      "prerelease": "./bin/release-hook-prerelease.sh"
    },
    "bumpFiles": [
      {
        "filename": ".version",
        "type": "plain-text"
      },
      {
        "filename": "package.json",
        "type": "json"
      }
    ]
  }
}
